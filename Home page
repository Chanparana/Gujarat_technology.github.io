<script>
                var button = document.getElementById("more-button");
function more() {

                if (button.innerHTML.includes("Close more options")) {
document.getElementById('page-1').style.display='block';
document.getElementById('page-2').style.display='none';
toast("More options");
button.innerHTML = "More options<i aria-hidden=true class='fa fa-bars' style='border: none; font-size:25px;color: #fff'></i>";
                }                else {
toast("Close more options");
button.innerHTML = "Close more options<i aria-hidden=true class='fa fa-close' style='border: none; font-size:25px;color:red'></i>";
document.getElementById('page-1').style.display='none';
document.getElementById('page-2').style.display='block';
}
            }
function notificationClick() {
window.location.href="http://action_notifications";
}
function shareClick() {
window.location.href="http://action_share";
}
var mbutton = document.querySelectorAll('a');
    for(var j=0;j<mbutton.length;j++) {
mbutton[j].setAttribute("role", "button");
    }
function creditsClick() {

window.location.href="go:Cd";
}
function toast(message) {   
document.getElementById("message-box").style.display="block";
document.getElementById("message-box").innerHTML = message;
setTimeout(function(){
document.getElementById("message-box").style.display="none";
}, 300);
}
function privacypolicyClick() {
window.location.href="https://8tivykfbznyzeomzjbibuw-on.drv.tw/privacy%20policy.html";
}
function ContactusClick() {
window.location.href="go:cu";
}
function closeClick() {
button.innerHTML = "More options<i aria-hidden=true class='fa fa-bars' style='border: none; font-size:25px;color: #fff'></i>";
document.getElementById('page-1').style.display='block';
document.getElementById('page-2').style.display='none';
}
</script>
